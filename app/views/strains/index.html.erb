<p id="notice"><%= notice %></p>

<h1>Cepas</h1>

<table class="table">
  <thead class="thead-dark">
    <tr class="text-center">
      <th>Nombre</th>
      <th>Disponible</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @strains.order(:name).each do |strain| %>
      <tr class="text-center">
        <td><%= strain.name %></td>
        <td><%= strain.available %></td>
        <td><%= link_to 'Ver', strain %></td>
        <td><%= link_to 'Editar', edit_strain_path(strain) %></td>
        <td><%= link_to 'Eliminar', strain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-dark">Nueva Cepa</button>'.html_safe, new_strain_path %>
<%= link_to '<button type="button" class="btn btn-dark">Listado de Vinos</button>'.html_safe, wines_path %>